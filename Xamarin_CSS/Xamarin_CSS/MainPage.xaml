<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin_CSS.MainPage">
    
    <StackLayout VerticalOptions="Center" Margin="20">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Vertical">
            <Entry Placeholder="Your username"></Entry>
            <Entry Placeholder="Your password"></Entry>
            <Entry Placeholder="Your email" ></Entry>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <CheckBox></CheckBox>
            <Label Text="from another device"></Label>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button x:Name="giveup"  Text="Give-Up"></Button>
            <Button x:Name="signup" Text="Sign-Up"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
